@model IEnumerable<PitStopAutoShop.Web.Data.Entities.WorkOrder>

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Work Orders";
    ViewData["Controller"] = "Work Orders";
    ViewData["Action"] = null;
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"/>


<div class="container-fluid" style="margin-bottom: 75px; ">
    <div>            
            <table class="hover stripe row-border" style="display:inline-table" id="MyTable">
                <thead>
                    <tr>
                        <th>
                            Order Nº.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().OrderDateStart)
                        </th>  
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Vehicle
                        </th>
                        <th>
                            Technician Name
                        </th>
                        <th>
                           @Html.DisplayNameFor(model => model.FirstOrDefault().OrderDateEnd)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) 
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDateStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Appointment.Customer.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Appointment.Vehicle.PlateNumber) (@Html.DisplayFor(modelItem => item.Appointment.Vehicle.Brand.Name) @Html.DisplayFor(modelItem => item.Appointment.Vehicle.Model.Name))                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Appointment.Mechanic.FullName)
                        </td>
                        <td>
                            @if(item.OrderDateEnd.Date == Convert.ToDateTime("0001-01-01"))
                            {
                                @Html.Raw("-")
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.OrderDateEnd)
                            }                            
                        </td>
                        <td id="@item.Id">                           
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-edit"></i></a>  
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-list"></i></a> 
                            @if(this.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger pull-right" id="btnDelete"><i class="fas fa-trash"></i></a>
                            }                                
                        </td>
                    </tr>
            }
                </tbody>
            </table>
    </div>   

    <partial name="_DeleteDialog" />
    
</div>


<footer class="footer" style="position:Absolute; bottom:65px;">
    <table>
        <tr>
            <td style="margin-right:10px;">
               <i class="fas fa-edit" style="background: #31D2F2;padding:10px;border-radius: 50%; color:white;"></i> @Html.Raw(" = Edit ") 
            </td>
            <td>
                <i class="fas fa-list" style="background: #E0A800;padding:10px;border-radius: 50%; margin-left:10px; "></i> @Html.Raw(" = Details ") 
            </td>                      
            @if(this.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <td>
                    <i class="fas fa-trash" style="background: #C82333;padding:10px;border-radius: 50%; margin-left:10px; color:white "></i> @Html.Raw(" = Delete Estimate ")
                </td>               
            }
        </tr>
    </table>  
</footer>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
     <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                columnDefs: [
                    { className: 'dt-center', targets: "_all" },
                    {orderable: false, targets: 6}
                                        
                ],
                order: [[ 0, 'desc' ]],
            });
        });

        $(document).ready(function () {
            let id = 0;
            $('a[id*=btnDelete]').click(function () {
                debugger;
                id = $(this).parent()[0].id;
                $("#deleteDialog").modal('show');
                return false;
            });
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide');
                return false;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = '/Estimates/Delete/' + id;
            });
        });
    </script>
}
