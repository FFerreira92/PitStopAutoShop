@model PitStopAutoShop.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_PasswordLayout.cshtml";
}

 <section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="/images/siteContent/login_picture_3.jpg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form method="post">
         
          <div class="form-outline mb-4">
            <span asp-validation-for="UserName" class="text-warning"></span>
            <input asp-for="UserName" class="form-control sharp form-control-lg"/>
            <label asp-for="UserName"></label>            
          </div>

         
          <div class="form-outline mb-4">
            <span asp-validation-for="Password" class="text-warning"></span>
            <input asp-for="Password" type="password" class="form-control sharp form-control-lg"/>
            <label asp-for="Password"></label>            
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">           
              <input asp-for="RememberMe" type="checkbox" class="form-check-input"/>
              <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
            </div>           
            <a asp-action="RecoverPassword" class="btn btn-link">Forgot your password?</a>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn sharp btn-primary btn-lg btn-block">Sign in</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <a asp-action="Register" class="btn sharp btn-primary btn-lg btn-block social" style="background-color: #f7b801">
              <i class="fa-solid fa-user-astronaut me-2"></i>
              Register New User          
          </a>

          <a class="btn sharp btn-primary btn-lg btn-block social" style="background-color: #3b5998" href="#!"
            role="button">
            <i class="fab fa-facebook-f me-2"></i> Continue with Facebook
          </a>
          <a class="btn sharp btn-primary btn-lg btn-block social" style="background-color: #db4437" href="#!"
            role="button">
            <i class="fa-brands fa-google"></i> Continue with Google
        </a>

        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
