@model PitStopAutoShop.Web.Models.ResetPasswordViewModel


@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="All" ></div>
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="UserName" />
            

            <div class="form-group">
                <label asp-for="Password">New Password</label>
                <input asp-for="Password" type="password" class="form-control"></input>
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control"></input>
                <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary"/>                
            </div>
        </form>

        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }