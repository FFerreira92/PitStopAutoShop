@model PitStopAutoShop.Web.Models.ExternalLoginViewModel
@{
    ViewData["Title"] = "ExternalLoginConfirmation";
    Layout = "~/Views/Shared/_PasswordLayout.cshtml";
}



<section class="vh-100 persBack">
     
  <div class="container py-5 h-100">

      <div class="row d-flex align-items-center justify-content-center h-100">

          <div class="col-md-12 col-lg-5 col-xl-5 offset-xl-1 formStyle">

             <div style="text-align:center"> 
                 <h3 style="color:#f7b801 ">Register and associate your @ViewData["ProviderDisplayName"] account.</h3><br/>                  
                 <h6>Please add additional information to make your account better!</h6><br />
                 <p class="text-success">You have successfully authenticated to your @ViewData["ProviderDisplayName"] account </p>
             </div>
             
             
             <form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">                 
                
                 
             
                 <div class="form-outline mb-4">
                         <span asp-validation-for="Email" class="text-warning"></span>
                         <input asp-for="Email" class="form-control sharp form-control-lg"/>
                         <label asp-for="Email"></label>            
                 </div>
             
                  <div class="form-outline mb-4">
                         <span asp-validation-for="FirstName" class="text-warning"></span>
                         <input asp-for="FirstName" class="form-control sharp form-control-lg"/>
                         <label asp-for="FirstName"></label>            
                 </div>
             
                 <div class="form-outline mb-4">
                         <span asp-validation-for="LastName" class="text-warning"></span>
                         <input asp-for="LastName" class="form-control sharp form-control-lg"/>
                         <label asp-for="LastName"></label>            
                 </div>
             
                 <button type="submit" class="btn sharp btn-primary btn-lg btn-block">Log in</button>
                 <div asp-validation-summary="ModelOnly" ></div>
             </form>

          </div>
      </div>

  </div>
</section>