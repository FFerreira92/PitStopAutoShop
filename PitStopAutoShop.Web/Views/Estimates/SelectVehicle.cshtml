@model PitStopAutoShop.Web.Models.AddCustomerAndVehicleToEstimateViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Estimates";
    ViewData["BreadCrumb"] = "Select Vehicle";
}

<h4 style="text-align:center">Select the Vehicle you wish to make an estimate for</h4>
<hr />


<div class="col-md-4">
    <form asp-action="SelectVehicle">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
        <input type="hidden" asp-for="CustomerId" />
        

        <div class="form-group">
            <label asp-for="VehicleId" class="control-label"></label>
            <select asp-for="VehicleId" asp-items="Model.Vehicles" class="form-control" ></select>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>       
                 
        <div class="form-group">
            <input type="submit" value="Select Vehicle" class="btn btn-primary" />
        </div>
    </form>
</div> 