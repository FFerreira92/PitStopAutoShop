@model PitStopAutoShop.Web.Data.Entities.Role

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Employees";
    ViewData["BreadCrumb"] = "Role Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"/>

<div>
    <hr />
    <h2 style="text-align:center">@Html.DisplayFor(model => model.Name)</h2>
    <hr />   
</div>



@if(Model.Specialties == null || Model.Specialties.Count == 0)
{
    <h5 style="text-align:center; padding-bottom:100px">No Role Specialties added yet</h5>
}
else{

    <h4 style="margin-left:20px;">Models</h4>

    <div class="container-fluid">
    <div>
        <table class="hover stripe compact row-border" style="display:inline-table" id="MyTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Specialties.FirstOrDefault().Name)
                    </th>                                       
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Specialties.OrderBy(m => m.Name)) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>                                    
                    <td id="@item.Id">
                        <a asp-action="EditSpecialty" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-edit"></i></a>                          
                        <a asp-action="DeleteSpecialty" asp-route-id="@item.Id" class="btn btn-danger pull-right" id="btnDelete"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
}

<div>
    <a asp-action="AddSpecialty" asp-route-id="@Model.Id" class="btn btn-info">Add Specialty</a> 
    <a asp-action="ManageRoles" class="btn btn-success">Back to roles List</a>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
       
        $(document).ready(function() {
            $('#MyTable').DataTable({
                columnDefs: [{
                    className: 'dt-center', targets: "_all"
                }]
            });
        });

        $(document).ready(function() {
            
            let id = 0;

            $("a[id*=btnDelete]").click(function() {
                debugger;
                id=$(this).parent()[0].id;
                $("#deleteDialog").modal("show");
                return false;
            });

            $("#btnNoDelete").click(function() {
                $("#deleteDialog").modal("hide");
                return false;
            });

            $("#btnYesDelete").click(function() {
                window.location.href = "/Employees/DeleteSpecialty/"+id;
            });

        });

    </script>
}